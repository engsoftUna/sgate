@model sgate.Models.tipoproduto

@{
    ViewBag.Title = "Tipo de Produto";
}

<h2>Alteração do Tipo de Produto</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Alteração do Tipo de Produto</legend>

        <div class="editor-label">
            @Html.HiddenFor(model => model.idtipo)
        </div>
        <div class="editor-field">
            @Html.HiddenFor(model => model.idtipo)
            @Html.ValidationMessageFor(model => model.idtipo)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.descricao)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.descricao)
            @Html.ValidationMessageFor(model => model.descricao)
        </div>

        <p>
            <input type="submit" value="Salvar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
