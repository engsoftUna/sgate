@model sgate.Models.produto

@{
    ViewBag.Title = "Produtos";
}

<h2>Produtos</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Produto</legend>


        <div class="editor-label">
            @Html.LabelFor(model => model.descricao)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.descricao)
            @Html.ValidationMessageFor(model => model.descricao)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.dataexpiracao)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.dataexpiracao)
            @Html.ValidationMessageFor(model => model.dataexpiracao)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.valorproduto)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.valorproduto)
            @Html.ValidationMessageFor(model => model.valorproduto)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.idtipo, "tipoproduto")
        </div>
        <div class="editor-field">
            @Html.DropDownList("idtipo", String.Empty)
            @Html.ValidationMessageFor(model => model.idtipo)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
